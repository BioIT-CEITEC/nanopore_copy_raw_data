{
  "workflow_description": {
    "name":"nanopore_copy_raw_data",
    "version": 1.0,
    "label":"Copy raw signals",
    "type":"run_demultiplexing",
    "inputs":"{run_dir}/*",
    "outputs":[
      "raw_reads/{sample}/{sample}.pod5",
      "run_report/{sample}/{sample}_report.json"
    ],
    "run_parameters": {
      "cpu": 30,
      "memory": 128
    }, 
    "run_outputs":[
      "{library}/sequencing_run_info/*"
    ]  
  },
  "general_params": [
    "sample_name",
    "run_dir",
    "run_sequencer_type",
    "i7_name"
  ],
  "gui_params" : {
    "primary" : {
      "library_name_correct": {
        "label": "Correct library name",
        "info": "Is the library name in sequia correct based on folder in path?",
        "type": "bool",
        "default": true
      },
      "library_name": {
        "label": "Name of the parent folder",
        "info": "Write name of the parent folder for flowcells",
        "type": "string",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": true,
            "values": {
              "library_name_correct": false
            }
          }
        }
      }
      }
  } 
}
